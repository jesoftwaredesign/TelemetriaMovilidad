<div class="row">
  {{#each notes}}
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{ title }} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
        </h4>
        <p>Tipo: {{ tipo }} </p>
        <p>Ubicaci√≥n: {{ ubicacion }} </p>
        <p>Id_sensor: {{ _id }} </p>
        <!-- DELETE REQUEST -->
        <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger btn-block btn-sm">Delete</button>
        </form>
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <h1>Hello {{user.name}}</h1>
      <p clsss="lead">Crea y adiciona tu primer sensor:</p>
      <a href="/notes/add" class="btn btn-success btn-block">Adicionar Sensor</a>
    </div>
  </div>
  {{/each}}
</div>