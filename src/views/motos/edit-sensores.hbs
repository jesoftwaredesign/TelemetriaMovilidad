<div class="col-md-4 mx-auto">
  <div class="card text-center">
    <div class="card-header">
      <h3>Editar Sensor</h3>
    </div>
    <div class="card-body">
      <form action="/motos/editar/" method="POST">
        <div class="form-group">
          <label>Nombre sensor</label>
          <input type="text" name="title" class="form-control" value="{{title}}" autofocus/>
        </div>
        <div class="form-group">
          <label>Tipo sensor</label>
          <input type="text" name="tipo" class="form-control" value="{{tipo}}" />
          
        </div>
        <div class="form-group">
          <label>Codigo sensor</label>
          <input type="text" name="moto_codigo" class="form-control" value="{{_id}}" readonly />
        </div>
        
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Save
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

