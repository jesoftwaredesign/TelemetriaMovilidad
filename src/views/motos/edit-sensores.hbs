<div class="col-md-4 mx-auto">
  <div class="card text-center">
    <div class="card-header">
      <h3>Editar Interfaz de Adquisición de datos</h3>
    </div>
    <div class="card-body">
      <form action="/motos/editar/" method="POST">
        <div class="form-group">
          <label>Nombre Interfaz</label>
          <input type="text" name="name" class="form-control" value="{{name}}" autofocus/>
        </div>
        <div class="form-group">
          <label>Ubicación</label>
          <input type="text" name="ubicacion" class="form-control" value="{{ubicacion}}" />
        </div>
        <div class="form-group">
          <label>Información de sensores que posee</label>
          <input type="text" name="info" class="form-control" value="{{info}}" />
        </div>
        <div class="form-group">
          <label>Codigo Interfaz</label>
          <input type="text" name="sensor_codigo" class="form-control" value="{{sensor_codigo}}" readonly />
        </div>
        
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Save
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

