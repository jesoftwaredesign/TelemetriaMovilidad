<div class="col-md-4 mx-auto">
  <div class="card text-center">
    <div class="card-header">
      <h3>Nuevo Sensor</h3>
    </div>
    <div class="card-body">
      <form action="/sensores/new-sensores" method="POST">
        <div class="form-group">
          <input type="text" name="title" class="form-control" placeholder="Nombre Sensor" autofocus/>
        </div>
        <div class="form-group">
          <input name="tipo" class="form-control" placeholder="Tipo" autofocus/>
        </div>
        <div class="form-group">
          <input name="valor" class="form-control" placeholder="Valor" autofocus/>
        </div>

        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Guardar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

