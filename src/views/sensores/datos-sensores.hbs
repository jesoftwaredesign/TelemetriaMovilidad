
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Sensor</th>
      <th scope="col">Tipo</th>
      <th scope="col">Temperatura</th>
      <th scope="col">Humedad</th>
      <th scope="col">Fecha</th>
    </tr>
  </thead>
  
{{#each sensores}}
  <tbody>
    <tr class="table-active">
      <th scope="row">{{title}}</th>
      <td>{{tipo}}</td>
      <td>{{s_temperatura}}</td>
      <td>{{s_humedad}}</td>
      <td>{{updatedAt}}</td>
    </tr>

{{/each}}
  </tbody>
</table> 